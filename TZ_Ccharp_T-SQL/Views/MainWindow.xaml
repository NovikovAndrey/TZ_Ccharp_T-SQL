<Window x:Class="TZ_Ccharp_T_SQL.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TZ_Ccharp_T_SQL.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel >
        <Label Content="Укажите путь к XML файлу" DockPanel.Dock="Top"/>
        <TextBox x:Name="FilePathTextBox" DockPanel.Dock="Top" Text="dsfsdfsdfds" IsReadOnly="True"/>
        <Button x:Name="FilePathButton" Content="Поиск" DockPanel.Dock="Top" Click="Button_Click"/>
        <Label Content="Введите критерий поиска" DockPanel.Dock="Top"/>
        <TextBox x:Name="XPathTextBox" DockPanel.Dock="Top"/>
        <Button x:Name="SearchButton" Content="Поиск" DockPanel.Dock="Top" Click="SearchButton_Click"/>
        <TextBox x:Name="ResultsTextBox"/>
    </DockPanel>
</Window>
